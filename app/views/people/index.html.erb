<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">

  <h2>Errors:</h2>
  <ul>
    <li ng-repeat="error in errors">{{error}}</li>
  </ul>

    Filter Name: <input ng-model="nameFilter">
    <div ng-repeat="person in people | filter: nameFilter">
      <h3 ng-click="toggleBioVisible(person)" >{{ person.name }}</h3>
      <p ng-class="{blueText: person.bioVisible}">{{ person.bio }}</p>
      <button ng-click="deletePerson(person)">Delete</button>
    </div>

    <h4>Add new person:</h4>
    <label>Name:</label><input ng-model="newPersonName">
    <label>Bio:</label><input ng-model="newPersonBio">
    <button ng-click="addNewPerson(newPersonName, newPersonBio)">Add Person</button>

    <h4>Total number of people:</h4>{{ people.length }}

  </div>  
</div>
